<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/terrain"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/d_help"
        android:onClick="help"
        android:src="@drawable/ic_action_help" />

    <ImageButton
        android:id="@+id/wikipedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/d_wiki"
        android:onClick="wikipedia"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/score"
        style="@style/StatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/score"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/stepsLeft"
        style="@style/StatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/steps"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lives"
        style="@style/StatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/stepsLeft"
        android:layout_alignParentLeft="true"
        android:text="@string/lives"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/chest"
        style="@style/SpriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/d_chest"
        android:onClick="clickChest"
        android:src="@drawable/chest1" />

    <ImageButton
        android:id="@+id/robot0"
        style="@style/SpriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/chest"
        android:layout_alignStart="@id/chest"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:contentDescription="@string/d_r0"
        android:onClick="clickRobot"
        android:src="@drawable/robot00" />

    <ImageButton
        android:id="@+id/robot1"
        style="@style/SpriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/chest"
        android:layout_centerVertical="true"
        android:layout_marginLeft="140dp"
        android:layout_toRightOf="@id/chest"
        android:contentDescription="@string/d_r1"
        android:onClick="clickRobot"
        android:src="@drawable/robot10" />

    <ImageButton
        android:id="@+id/robot2"
        style="@style/SpriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:contentDescription="@string/d_r2"
        android:onClick="clickRobot"
        android:src="@drawable/robot20" />

    <ImageButton
        android:id="@+id/robot3"
        style="@style/SpriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="80dp"
        android:layout_toLeftOf="@id/chest"
        android:contentDescription="@string/d_r3"
        android:onClick="clickRobot"
        android:src="@drawable/robot30" />

</RelativeLayout>