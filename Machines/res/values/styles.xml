<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SpriteButton" parent="android:attr/textAppearanceLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:height">200dp</item>
        <item name="android:width">200dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@null</item>
    </style>

    <style name="StatusText" parent="android:attr/textAppearanceLarge">
        <item name="android:textColor">@color/none_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">42sp</item>
    </style>

    <color name="none_color">#0000FF</color>
    <color name="hit_color">#00FF00</color>
    <color name="miss_color">#FF0000</color>

</resources>